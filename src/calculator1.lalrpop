use crate::expr::Expr;

grammar;

pub Term: String = <r"[A-Z]"> => <>.to_string();

pub Expr: Box<Expr> = {
    "(" <l:Expr> "+" <r:Expr> ")" => Box::new(Expr::Or(l, r)),
    "(" <l:Expr> "*" <r:Expr> ")" => Box::new(Expr::And(l, r)),
    "(" "!" <e:Expr> ")" => Box::new(Expr::Not(e)),
    <t:Term> => Box::new(Expr::Term(t)),
    "(" <Expr> ")"
};
